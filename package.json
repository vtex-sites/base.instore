{
  "name": "base.instore",
  "version": "1.0.0",
  "private": true,
  "description": "Base inStore",
  "author": "Guilherme Bruzzi",
  "keywords": [
    "gatsby",
    "instore"
  ],
  "scripts": {
    "develop": "gatsby develop",
    "start": "yarn develop",
    "build": "gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "yarn lint:prettier",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:eslint-fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings 0",
    "lint:prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,gql,json,yml,md}\""
  },
  "dependencies": {
    "@vtexlab/gatsby-theme-instore-core": "^0.0.4",
    "gatsby": "^2.32.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@vtex/prettier-config": "^0.3.6",
    "@vtex/tsconfig": "^0.5.6",
    "eslint": "^7.18.0",
    "eslint-config-vtex": "^12.9.3",
    "eslint-config-vtex-react": "^6.9.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=14.15 <15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{gql,json,yml,md}": [
      "prettier --write"
    ]
  }
}
